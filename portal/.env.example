# Apollo Nexusâ„¢ HVAC Fault Detection System
# Example Configuration File
# Copy this file to .env and update with your values

# System Information
SYSTEM_NAME=Apollo Nexus HVAC
SYSTEM_VERSION=1.0.0
LOCATION=Your Location Here

# API Keys
CLOUDFLARE_API=your_cloudflare_api_key
RESEND_API=your_resend_api_key
OPENWEATHER_API=your_openweather_api_key

# Authentication
API_AUTH_KEY=generate_random_key_here
JWT_SECRET=generate_random_jwt_secret
SESSION_SECRET=generate_random_session_secret

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
API_PORT=5000

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=apollo_nexus
POSTGRES_USER=apollo
POSTGRES_PASS=your_postgres_password

# SQLite Configuration
SQLITE_DB_PATH=./data/sensor_data.db
DATA_RETENTION_DAYS=90

# Hardware Configuration
I2C_BUS=1
ENABLE_HARDWARE=true
BOARD_SCAN_INTERVAL=5000
SENSOR_POLL_INTERVAL=1000

# Supported Boards
ENABLE_MEGABAS=true
ENABLE_MEGAIND=true
ENABLE_16UNIVIN=true
ENABLE_16UOUT=true
ENABLE_8RELIND=true
ENABLE_16RELIND=true
ENABLE_WITMOTION=true

# RS485 Configuration
RS485_PORT=/dev/ttyUSB0
RS485_BAUDRATE=9600

# Apollo AI Configuration
APOLLO_MODEL_PATH=./models/apollo_model
ENABLE_AI_INFERENCE=true
INFERENCE_INTERVAL=60000

# Cloudflare Tunnel (optional)
TUNNEL_NAME=
TUNNEL_DOMAIN=

# Energy Cost Configuration
ENERGY_ENABLED=true
KWH_RATE=0.15
DEMAND_RATE=25.00
CURRENCY=USD
BILLING_CYCLE=monthly

# Weather Configuration
WEATHER_ENABLED=true
WEATHER_LOCATION=City,State,Country
WEATHER_UNITS=imperial
WEATHER_UPDATE_INTERVAL=600000

# Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_PATH=./logs

# Security
ENABLE_HTTPS=false
CORS_ORIGIN=*
RATE_LIMIT=100

# Email Configuration
EMAIL_FROM=noreply@yourdomain.com
EMAIL_ADMIN=admin@yourdomain.com
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=smtp_username
SMTP_PASS=smtp_password

# Alarm Configuration
ENABLE_ALARMS=true
ALARM_CHECK_INTERVAL=30000
CRITICAL_ALERT_DELAY=300000
EMAIL_ALERTS=true
SMS_ALERTS=false

# WebSocket Configuration
ENABLE_WEBSOCKET=true
WS_PORT=3001

# Backup Configuration
ENABLE_BACKUP=true
BACKUP_INTERVAL=86400000
BACKUP_PATH=./backups
MAX_BACKUPS=30

# System Defaults
DEFAULT_TIMEZONE=America/New_York
DEFAULT_DATE_FORMAT=MM/DD/YYYY
DEFAULT_TEMPERATURE_UNIT=F