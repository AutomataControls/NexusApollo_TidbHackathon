                        {{data.hailoNPU.modelPerformance.gaia.avgConfidence}}
                        {{else}}
                        92, 85, 78, 83, 88, 80, 90, 95
                        {{/if}}
                    ],
                    borderColor: 'rgb(99, 102, 241)',
